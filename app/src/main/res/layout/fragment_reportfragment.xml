<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".reportfragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/report_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/background1"
        android:elevation="@dimen/_8sdp"

        android:padding="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_7sdp">
            <TextView
                android:id="@+id/reportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/lavender"
               android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/cancerResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:text="Skin cancer"
                android:textColor="@color/lavender"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cancerType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"

                android:textColor="@color/lavender"
                android:text="Type: NA"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:id="@+id/cancerSymptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms: \n• Asymmetry\n• Irregular Border\n• Multiple Colors\n• Large Diameter"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/lavender"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textColor="@color/lavender"
                android:text="Medication: Consult with  dermatologist doctor before taking any medication"
                android:textSize="16sp" />

            <Button
                android:id="@+id/appointmentdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
               android:padding="@dimen/_10sdp"
                android:text="Book an appointment"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
